{
  "expo": {
    "name": "TailTrails",
    "slug": "dog-walk-tracker-x2nouww",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/icon.png",
    "scheme": "tail-trails",
    "userInterfaceStyle": "automatic",
